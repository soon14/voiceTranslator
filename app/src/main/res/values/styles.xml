<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="dialog_view_animation" mce_bogus="1" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/loading_dialog_view_in_anim</item>
        <item name="android:windowExitAnimation">@anim/loading_dialog_view_out_anim</item>
    </style>

    <style name="dialog_view_theme" parent="android:Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
    </style>

</resources>
