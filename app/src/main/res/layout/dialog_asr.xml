<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="350dp"
        android:layout_centerInParent="true"
        android:background="@color/white"
        android:orientation="vertical">

        <TextView
            android:id="@+id/status_asr_dialog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:paddingBottom="15dp"
            android:paddingLeft="15dp"
            android:paddingTop="15dp"
            android:text="请说chineseName"
            android:textColor="@color/blue3"
            android:textSize="16sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/blue3"></View>

        <TextView
            android:id="@+id/asr_result_asr_dialog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:maxLines="3"
            android:paddingBottom="3dp"
            android:paddingTop="3dp"
            android:scrollbars="vertical"
            android:singleLine="false"
            android:text="语音识别的结果，滚动，最多三行" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/recording_asr_dialog"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_centerInParent="true"
                android:background="@drawable/ic_record_okay" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/grey23">

            <TextView
                android:id="@+id/cancel_asr_dialog"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:paddingBottom="15dp"
                android:paddingTop="15dp"
                android:text="@string/hint_asr_dialog_cancel"
                android:textSize="16sp" />

            <View
                android:id="@+id/view_divide_asr_dialog"
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="@color/grey2"></View>

            <TextView
                android:visibility="visible"
                android:id="@+id/finish_asr_dialog"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:paddingBottom="15dp"
                android:paddingTop="15dp"
                android:text="@string/hint_asr_dialog_finish"
                android:textSize="16sp" />
        </LinearLayout>


    </LinearLayout>

</RelativeLayout>