<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.LanguageListActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <ImageView
            android:id="@+id/close_language_selector_activity"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:background="@drawable/close" />

        <android.support.design.widget.TabLayout
            android:id="@+id/table_layout_language_selector_activity"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_centerInParent="true"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="90dp"
            android:layout_marginRight="90dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/shape_language_activity_tab"
            app:tabGravity="fill"
            app:tabIndicator="@drawable/shape_language_activity_indicator"
            app:tabIndicatorColor="@color/blue3"
            app:tabIndicatorHeight="35dp"
            app:tabMode="fixed"
            app:tabSelectedTextColor="@color/white">

        </android.support.design.widget.TabLayout>

    </RelativeLayout>


    <android.support.v4.view.ViewPager
        android:id="@+id/viewPager_language_selector_activity"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@android:color/white" />
</LinearLayout>